@model WbAppTravelReminder.Models.ClsReminder

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Get License</title>
    <script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/simple-line-icons.css">
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/device-mockups.min.css">
    <link href="~/Content/new-age.min.css" rel="stylesheet">
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="~/Home/Home">Travel Reminder</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Welcome
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a href="/Home/GetApiDocumentation" style="font-weight:bold;font-size:small;"> &nbsp; <i class="fa fa-lg fa-download"></i>  Download API Documentation</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Home/Home" style="font-weight:bold;font-size:small;">&nbsp; <i class="fa fa-lg fa-home"></i> Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    

        <header class="masthead">
            <div class="container h-100">
                <div class="row h-100">
                    @if (Model.ApiKey == "")
                    {
                    <div class="col-lg-10 my-auto">
                        @using (Html.BeginForm("GenerateLicenseKey", "Home", FormMethod.Post))
                        {
                            <div class="col-md-12">
                                <h3>Generate API Key</h3>
                            </div>
                            <div class="col-md-12">

                                <table style="width:100%;" class="table">
                                    <tr>
                                        <td style="width:50%;">
                                            <b>Email Id</b>
                                            @Html.ValidationMessageFor(m => m.EmailId)
                                        </td>
                                        <td style="width:50%;">

                                            @Html.TextBoxFor(m => m.EmailId)

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:50%;">
                                            <b>Contact Num</b>
                                            @Html.ValidationMessageFor(m => m.ContactNum)
                                        </td>
                                        <td style="width:50%;">

                                            @Html.TextBoxFor(m => m.ContactNum)

                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" align="center">
                                            <button type="submit" class="btn btn-primary">Create API Key</button>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        }
                        </div>
                    }
                    else
                    {
                    <div class="col-lg-10 my-auto">
                        <div class="col-md-12">
                            <h3>Your API Key : @Model.ApiKey </h3>
                        </div>
                    </div>
                    }

                    

                </div>
            </div>
        </header>

    
</body>
</html>
