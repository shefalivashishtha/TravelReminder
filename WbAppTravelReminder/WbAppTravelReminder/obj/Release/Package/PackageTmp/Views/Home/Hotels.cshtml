@model WbAppTravelReminder.Models.ClsReminder

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hotels</title>
    <script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/simple-line-icons.css">
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/device-mockups.min.css">
    <link href="~/Content/new-age.min.css" rel="stylesheet">
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="~/Home/Home">Travel Reminder</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Welcome
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a href="/Home/GetApiDocumentation" style="font-weight:bold;font-size:small;"> &nbsp; <i class="fa fa-lg fa-download"></i>  Download API Documentation</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Home/Home" style="font-weight:bold;font-size:small;">&nbsp; <i class="fa fa-lg fa-home"></i> Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100">

                
                <div class="col-lg-10 my-auto">

                    <div class="col-md-12">
                        <h2>
                            @if (Model.ListHotels.Count > 0)
                            {
                                <h2>Hotels in @Model.Location</h2>
                            }
                            else
                            {
                                <h2>Search Hotels</h2>
                            }

                        </h2>
                    </div>
                    @using (Html.BeginForm("GetHotels", "Home", FormMethod.Post))
                    {
                        if (Model.ListHotels.Count > 0)
                        {
                            <div class="col-md-12" style="max-height:500px;overflow-y:scroll;margin-top:5%;">
                                <table style="width:100%;">
                                    @foreach (var hotel in Model.ListHotels)
                                    {
                                        <tr>
                                            <td >
                                                <i class="fa fa-5x fa-building-o"></i>
                                            </td>
                                            <td>
                                                <table style="width:100%;" border="0">
                                                    <tr>
                                                        <td>
                                                            <h4>@hotel.Name</h4>
                                                            
                                                            <span style="font-size:small">@hotel.Rating  Star Rated</span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @hotel.Address
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @hotel.Price
                                                        </td>
                                                    </tr>
                                                </table>
                                              
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <hr style="display: block;
       position: relative;
       width: 100%;
       font-size: 1px;
       border: none;
       border-top: 1px solid #aaaaaa;
       border-bottom: 1px solid #ffffff;" />
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12">
                                <table style="width:100%" class="table">
                                    <tr>
                                        <td>
                                            <h4>Travel Destination</h4>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Location)
                                        </td>
                                    </tr>
                                    </table>
                                
                            </div>
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary">Search Hotels</button>
                            </div>
                        }
                    }
                        </div>
                

            



            </div>
        </div>
    </header>


</body>
</html>
