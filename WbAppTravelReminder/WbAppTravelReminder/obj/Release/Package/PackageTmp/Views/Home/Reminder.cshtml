@model WbAppTravelReminder.Models.ClsReminder

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Reminder</title>
    <script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/simple-line-icons.css">
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/Content/jquery-ui-timepicker-addon.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/device-mockups.min.css">
    <link href="~/Content/new-age.min.css" rel="stylesheet">

    <script>

        $(document).ready(function () {
            var dateNow = new Date();
            var dt = new Date(dateNow.getFullYear(), dateNow.getMonth()+1, dateNow.getDate(), dateNow.getHours(), dateNow.getMinutes(), dateNow.getSeconds())
            $(".datetimepicker").datetimepicker({
                
                format: 'MM/dd/yyyy HH:mm',
                defaultDate: dt
            });

            var dtToday = dateNow.getMonth()+1 + '/' + dateNow.getDate() + '/' + dateNow.getFullYear() + ' ' + dateNow.getHours() + ':' + dateNow.getMinutes();
            $("#txtTravelDateTime").val(dtToday);

        });
    </script>
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="~/Home/Home">Travel Reminder</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Welcome
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <span>Welcome &nbsp;</span>
                    </li>
                    <li class="nav-item">
                        <span id="spName"> &nbsp; @Model.UserName </span>
                    </li>
                    <li class="nav-item">
                        <a href="~/Home/Home" style="font-weight:bold;font-size:small;">&nbsp; <i class="fa fa-lg fa-home"></i> Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @using (Html.BeginForm("CreateReminder", "Home", FormMethod.Post))
    {

        <header class="masthead">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-lg-10 my-auto">
                        <div class="col-md-12">
                            <h3>Travel Details</h3>
                        </div>
                        <div class="col-md-12">

                            <table style="width:100%;" class="table">
                                <tr>
                                    <td style="width:50%;">
                                        
                                        <a href="https://finder.eircode.ie/#/" alt="Find Eir Code" target="_blank" style="color:white;font-weight:bold;text-decoration:underline;font-family: Muli,Helvetica,Arial,sans-serif;font-size: 1rem;line-height: 1.5;">Source Postal Code</a>
                                        @Html.ValidationMessageFor(m=>m.SourcePostalCode)
                                    </td>
                                    <td style="width:50%;">

                                        @Html.TextBoxFor(m => m.SourcePostalCode, new { id = "txtSourceCode" })

                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:50%;">
                                        <a href="https://finder.eircode.ie/#/" alt="Find Eir Code" target="_blank" style="color:white;font-weight:bold;text-decoration:underline;font-family: Muli,Helvetica,Arial,sans-serif;font-size: 1rem;line-height: 1.5;">
                                            Boarding Point Postal Code</a>
                                            @Html.ValidationMessageFor(m => m.BoradingPointPostalCode)
                                    </td>
                                    <td style="width:50%;">

                                        @Html.TextBoxFor(m => m.BoradingPointPostalCode, new { id = "txtBPCode" })

                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:50%;">
                                        <b>Travel Destination</b>
                                        @Html.ValidationMessageFor(m => m.Location)
                                    </td>
                                    <td style="width:50%;">

                                        @Html.TextBoxFor(m => m.Location, new { id = "txtLocation" })
                                        

                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:50%;">
                                        <b>Travel Date & Time</b>
                                        @Html.ValidationMessageFor(m=>m.TravelDate)
                                    </td>
                                    <td style="width:50%;">

                                        @Html.TextBoxFor(m => m.TravelDate, new { id = "txtTravelDateTime", @class = "datetimepicker" })


                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:50%;">
                                        <b>Travel Mode</b>
                                        @Html.ValidationMessageFor(m=>m.ModeOfTravel)
                                    </td>
                                    <td style="width:50%;">

                                        @Html.DropDownListFor(m => m.ModeOfTravel, new SelectList(Model.LstTravelModes))

                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" align="center">
                                        <button type="submit" class="btn btn-primary">Create Reminder</button>
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </header>

    }
</body>
</html>
